#! /bin/sh

#-----------------------------------------------------------------------
# $1=bwfmetaedit Package version,
# $2=,
# $3=,
# $4=,
# $5=,
# $6=,
# $7=Platform, $8=CPU, $9=CPU target
Download_Packages()
{
#-----------------------------------------------------------------------
# Downloading
wget "http://download.opensuse.org/repositories/home:/MediaArea_net/$7/$8/bwfmetaedit$dash$bwfmetaeditv-$1$9.$type"
mv bwfmetaedit$dash$bwfmetaeditv-$1$9.$type \
 download/binary/bwfmetaedit/$bwfmetaeditv/bwfmetaedit$dash$bwfmetaeditv-$destversion$9.$7.$type

wget "http://download.opensuse.org/repositories/home:/MediaArea_net/$7/$8/bwfmetaedit-gui$dash$bwfmetaeditv-$1$9.$type"
mv bwfmetaedit-gui$dash$bwfmetaeditv-$1$9.$type \
 download/binary/bwfmetaedit-gui/$bwfmetaeditv/bwfmetaedit-gui$dash$bwfmetaeditv-$destversion$9.$7.$type
}

#-----------------------------------------------------------------------
# $1=bwfmetaedit version
Download_Global()
{
#-----------------------------------------------------------------------
# Clean up
rm download/binary/bwfmetaedit/$bwfmetaeditv/*.rpm -f
rm download/binary/bwfmetaedit/$bwfmetaeditv/*.deb -f
rm download/binary/bwfmetaedit-gui/$bwfmetaeditv/*.rpm -f
rm download/binary/bwfmetaedit-gui/$bwfmetaeditv/*.deb -f
mkdir download/binary/bwfmetaedit/$bwfmetaeditv
mkdir download/binary/bwfmetaedit-gui/$bwfmetaeditv

#-----------------------------------------------------------------------
# Downloading
type="deb"
devext="dev"
dash="_"
Download_Packages 1  x  x  x x x   Debian_5      i386   _i386
Download_Packages 1  x  x  x x x   Debian_5      amd64 _amd64
Download_Packages 1  x  x  x x x   Debian_6.0    i386   _i386
Download_Packages 1  x  x  x x x   Debian_6.0    amd64  _amd64
Download_Packages 1  x  x  x x x   Ubuntu_9.04   i386   _i386
